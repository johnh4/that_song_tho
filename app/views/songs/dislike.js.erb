	//$('#challenger-artist').html("<%= @current_challenger.artist %>");

	$('#liked-songs-list').html("<%= escape_javascript(render partial: 'challenge_modes/liked_songs_list') %>");
	$('#disliked-songs-list').html("<%= escape_javascript(render partial: 'challenge_modes/disliked_songs_list') %>");
	$('#rounds-won').html("<%= current_user.favorites.last.rounds_won %>");
